<Page
    x:Class="Grøn.Sælg.VælgBetaling"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Grøn.Sælg"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       mc:Ignorable="d"
    Background="#00807F">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        
        <!--Indkøbskurv knapper-->
        <Button x:ConnectionId='2'                       Content="Fortryd" Grid.Column="1" BorderBrush="#FF5A5A5A" BorderThickness="2" Grid.Row="2" VerticalAlignment="Bottom" Background="Silver" FontFamily="98" FontSize="45" Foreground="Black" Canvas.ZIndex="4"  Margin="2,0,2,2" Height="60" FontWeight="Normal" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" />
        <Button x:ConnectionId='3'                      Content="Kort" Grid.Column="1" BorderBrush="#FF5A5A5A" BorderThickness="2" Grid.Row="2" VerticalAlignment="Bottom" Background="#FF026A60" FontFamily="98" FontSize="45" Foreground="#FFE6E6E6" Canvas.ZIndex="4"  Margin="2,0,2,62" Height="60" FontWeight="Normal" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" />
        <Button x:ConnectionId='4'                       Content="Kontant" Grid.Column="1" BorderBrush="#FF5A5A5A" BorderThickness="2" Grid.Row="2" VerticalAlignment="Bottom" Background="#FF026A60" FontFamily="98" FontSize="45" Foreground="#FFE6E6E6" Canvas.ZIndex="4"  Margin="2,0,2,122" Height="60" FontWeight="Normal" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" />
        
        
        <!--Overskifter-->
        <TextBlock Text="Vælg Produkt" Grid.Column="0" Grid.Row="1" FontSize="70" TextAlignment="Center" FontWeight="Bold" FontFamily="98" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        <TextBlock Text="Indkøbskurv" Grid.Column="1" Grid.Row="1" FontSize="70" TextAlignment="Center" FontWeight="Bold" FontFamily="98" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>

        <!--TopBar-->
        <Rectangle  Grid.Row="0" Grid.ColumnSpan="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stroke="#FFBDBDBD">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                    <GradientStop Color="#0F0F71"/>
                    <GradientStop Color="#1A7FCD" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Button x:ConnectionId='5'                       Content="TILBAGE" Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="White" Background="Transparent" Height="100" FontFamily="Assets\M 8pt.ttf #98" FontSize="60" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" FontWeight="SemiBold" Foreground="#FFE6E6E6" VerticalAlignment="Stretch" Canvas.ZIndex="4" Margin="1,0,0,0" />
        <Button Content="ANNULLER" Grid.Row="0" Grid.Column="1" BorderThickness="2" BorderBrush="White" Background="Transparent" Height="100" FontFamily="Assets\M 8pt.ttf #98" FontSize="60" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" FontWeight="SemiBold" Foreground="#FFE6E6E6" VerticalAlignment="Stretch" Canvas.ZIndex="4" Margin="1,0,0,0" />


        <!--Example Buttons-->

        <Button Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" Background="#FFF2EC9B" FontFamily="98" BorderBrush="#FF5A5A5A" BorderThickness="2" Height="100" Width="450" Content="Test" FontSize="70" />

        <!--Indkøbskurv/Ordre-->
        <Rectangle Grid.Row="2" Fill="#FFBAD9D6" Margin="-4,0,2,0" Stroke="#C0C0C0" StrokeThickness="6" Grid.Column="1" />

    </Grid>
</Page>

